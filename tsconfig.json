{
  "compilerOptions": {
    "isolatedModules": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "preserve",
    "paths": {
      "@/backend/*": [
        "./src/apps/backend/*"
      ],
      "@/sites/*": [
        "./src/lib/sites/*"
      ],
      "@/utils/*": [
        "./src/lib/utils/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/extension/*": [
        "./src/apps/extension/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "exclude": [
    "node_modules/**/*"
  ]
}
