{
  "compilerOptions": {
    "isolatedModules": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "baseUrl": "src",
    "jsx": "preserve",
    "paths": {
      "@/backend/*": [
        "backend/*"
      ],
      "@/sites/*": [
        "sites/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/extension/*": [
        "apps/extension/*"
      ]
    },
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "src/creds/firebase-prod.json"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "exclude": [
    "node_modules/**/*"
  ]
}
