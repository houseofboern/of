{
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["DOM", "ES2020"],
    "baseUrl": "src",
    "paths": {
      "@/backend/*": ["backend/*"],
      "@/sites/*": ["sites/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*", "src/creds/firebase-prod.json"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
