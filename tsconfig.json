{
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2020",
    "baseUrl": "src",
    "lib": ["DOM", "ES2020"],
    "paths": {
      "@/api/*": ["api/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
