{
  "name": "of",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/jfrazier-eth/of.git",
  "author": "Joe Frazier <54604023+jfrazier-eth@users.noreply.github.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "yarn clean && tsc -p ./tsconfig.backend.json",
    "clean": "rimraf ./dist",
    "start": "yarn build && yarn migrate up && node -r dotenv/config --loader esm-module-alias/loader ./dist/backend/index.js",
    "lint": "next lint",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "migrate": "ts-node --project tsconfig.migrations.json node_modules/node-pg-migrate/bin/node-pg-migrate",
    "start:script": "yarn build && node -r dotenv/config --loader esm-module-alias/loader ./dist/index.js",
    "ext:dev": "next dev",
    "ext:start": "next start",
    "ext:build": "yarn clean && concurrently \"yarn ext:build:popup\" \"yarn ext:build:background\" \"yarn ext:build:content\"",
    "ext:build:popup": "next build --experimental-turbo && concurrently \"yarn ext:mv:ui:out\" \"yarn ext:cp:manifest\" && rm -r out",
    "ext:build:background": "tsup ./src/apps/extension/scripts/background.ts",
    "ext:build:content": "tsup ./src/apps/extension/content/content.ts && yarn cp:content:css && yarn cp:images",
    "ext:cp:content:css": "cp ./src/apps/extension/content/inject.css ./ext-dist/inject.css",
    "ext:cp:images": "cp ./src/apps/extension/images/* ./ext-dist/",
    "ext:cp:manifest": "cp manifest.json ./ext-dist/manifest.json",
    "ext:mv:ui:out": "mv out/_next out/next && sed -i '' -e 's/\\/_next/\\.\\/next/g' out/**.html && mv out/index.html ./ext-dist && rsync -va --delete-after out/next/ ./ext-dist/next/",
    "ext:mv:ui:assets": "rsync -va --delete-after public/next-assets ./ext-dist/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.2",
    "@types/tough-cookie": "^4.0.2",
    "dotenv": "^16.3.1",
    "jest": "28.1.0",
    "rimraf": "^5.0.1",
    "ts-jest": "29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "@swc/core": "^1.3.68",
    "@types/chrome": "^0.0.239",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "10.4.14",
    "concurrently": "^8.2.0",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.9",
    "next": "13.4.9",
    "tsup": "^7.1.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "axios": "^1.4.0",
    "bullmq": "^4.2.1",
    "cors": "^2.8.5",
    "esm-module-alias": "^2.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^10.3.0",
    "got": "^13.0.0",
    "https-proxy-agent": "^7.0.0",
    "ioredis": "^5.3.2",
    "mongoose": "^7.3.3",
    "nanoid": "^4.0.2",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.1",
    "pg-promise": "^11.5.0",
    "tough-cookie": "^4.1.3",
    "firebase": "^10.0.0",
    "@headlessui/react": "^1.7.15",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/forms": "^0.5.4",
    "postcss": "8.4.25",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2"
  },
  "aliases": {
    "@/backend": "dist/backend",
    "@/sites": "dist/sites",
    "@/utils": "dist/utils"
  }
}
